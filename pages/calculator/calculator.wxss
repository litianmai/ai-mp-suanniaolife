page {
  background-color: #1c1c1c;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 显示屏 */
.display {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.expression {
  font-size: 32rpx;
  color: #888;
  margin-bottom: 20rpx;
  min-height: 40rpx;
}

.result {
  font-size: 100rpx;
  color: #fff;
  font-weight: 300;
  word-break: break-all;
}

/* 按键区 */
.keypad {
  padding-bottom: 40rpx;
}

.row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.key {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
  font-weight: 500;
}

.number {
  background-color: #333333;
  color: #ffffff;
}

.number:active {
  background-color: #737373;
}

.function {
  background-color: #a5a5a5;
  color: #000000;
}

.function:active {
  background-color: #d9d9d9;
}

.operator {
  background-color: #ff9f0a;
  color: #ffffff;
}

.operator:active {
  background-color: #fbc78d;
}

.equal {
  flex: 1;
  background-color: #ff9f0a;
  color: #ffffff;
  border-radius: 70rpx;
}

.equal:active {
  background-color: #fbc78d;
}

.zero {
  width: 300rpx;
  border-radius: 70rpx;
  justify-content: flex-start;
  padding-left: 56rpx;
}
