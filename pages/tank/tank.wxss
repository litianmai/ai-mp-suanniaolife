page {
  background-color: #1a1a2e;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.game-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.game-canvas {
  width: 375px;
  height: 500px;
  border: 4rpx solid #4a4a6a;
  border-radius: 12rpx;
  background-color: #0f0f1a;
}

.game-info {
  display: flex;
  justify-content: space-around;
  width: 375px;
  padding: 24rpx;
  margin-top: 20rpx;
  background: linear-gradient(135deg, #2a2a4a 0%, #1a1a2e 100%);
  border-radius: 12rpx;
  border: 2rpx solid #3a3a5a;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 24rpx;
  color: #8888aa;
  margin-bottom: 8rpx;
}

.value {
  font-size: 36rpx;
  color: #4CAF50;
  font-weight: bold;
}

/* 控制区域 */
.controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 375px;
  margin-top: 40rpx;
  padding: 20rpx;
}

.joystick-container {
  width: 140rpx;
  height: 140rpx;
}

.joystick-base {
  width: 100%;
  height: 100%;
  background: linear-gradient(145deg, #2a2a4a, #3a3a5a);
  border-radius: 50%;
  position: relative;
  border: 4rpx solid #4a4a6a;
  box-shadow: inset 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.joystick-stick {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(145deg, #5DD66D, #3a9f4a);
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.4);
}

.fire-btn {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(145deg, #F44336, #C62828);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 4rpx solid #B71C1C;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.4);
}

.fire-btn:active {
  background: linear-gradient(145deg, #E57373, #EF5350);
  transform: scale(0.95);
}

.fire-text {
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.85);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  background: linear-gradient(145deg, #2a2a4a, #1a1a2e);
  padding: 60rpx 80rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid #4a4a6a;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.5);
}

.modal-title {
  font-size: 48rpx;
  color: #5DD66D;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.modal-desc {
  font-size: 28rpx;
  color: #8888aa;
  margin-bottom: 40rpx;
  text-align: center;
  line-height: 1.6;
}

.modal-score {
  font-size: 36rpx;
  color: #FFD700;
  margin-bottom: 40rpx;
}

.start-btn,
.restart-btn {
  background: linear-gradient(145deg, #5DD66D, #3a9f4a);
  color: #fff;
  font-size: 32rpx;
  padding: 24rpx 80rpx;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(93, 214, 109, 0.3);
}

.start-btn:active,
.restart-btn:active {
  background: linear-gradient(145deg, #66DD77, #4ab05a);
  transform: scale(0.98);
}
