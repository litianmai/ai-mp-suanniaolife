page {
  background-color: #1a1a1a;
}

.game-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.game-canvas {
  width: 300px;
  height: 300px;
  border: 4rpx solid #333;
  border-radius: 8rpx;
  background-color: #000;
}

.game-info {
  display: flex;
  justify-content: space-around;
  width: 300px;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #2a2a2a;
  border-radius: 8rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 24rpx;
  color: #888;
}

.value {
  font-size: 32rpx;
  color: #4CAF50;
  font-weight: bold;
}

/* 控制区域 */
.controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 300px;
  margin-top: 40rpx;
  padding: 20rpx;
}

.joystick-container {
  width: 120rpx;
  height: 120rpx;
}

.joystick-base {
  width: 100%;
  height: 100%;
  background: linear-gradient(145deg, #2a2a2a, #3a3a3a);
  border-radius: 50%;
  position: relative;
  border: 4rpx solid #444;
}

.joystick-stick {
  width: 50rpx;
  height: 50rpx;
  background: linear-gradient(145deg, #4CAF50, #2E7D32);
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.fire-btn {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(145deg, #F44336, #C62828);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 4rpx solid #B71C1C;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.fire-btn:active {
  background: linear-gradient(145deg, #E57373, #EF5350);
  transform: scale(0.95);
}

.fire-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  background: linear-gradient(145deg, #2a2a2a, #1a1a1a);
  padding: 60rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid #444;
}

.modal-title {
  font-size: 48rpx;
  color: #4CAF50;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.modal-desc {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 40rpx;
  text-align: center;
}

.modal-score {
  font-size: 36rpx;
  color: #FFEB3B;
  margin-bottom: 40rpx;
}

.start-btn,
.restart-btn {
  background: linear-gradient(145deg, #4CAF50, #2E7D32);
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  border: none;
}

.start-btn:active,
.restart-btn:active {
  background: linear-gradient(145deg, #66BB6A, #81C784);
}
